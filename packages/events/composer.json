{
    "name": "ifcastle/events",
    "description": "Implementation of the Events + EventDispatcher pattern.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "events",
        "event-dispatcher",
        "event-listener",
        "event-subscriber"
    ],
    "autoload": {
        "psr-4": {
            "IfCastle\\Events\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\Events\\": "./tests"
        }
    },
    "require": {
        "ifcastle/exceptions": "^5.1",
        "ifcastle/type-definitions": "^0.5.16",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "ifcastle/codestyle": "^0.1.7",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.2.x-dev"
        }
    }
}
