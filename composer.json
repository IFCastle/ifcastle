{
    "name": "ifcastle/ifcastle",
    "type": "project",
    "description": "IFCastle monorepo",
    "keywords": ["ifcastle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Edmond Dantes",
            "email": "edmondifthen@proton.me"
        }
    ],
    "repositories": [
        { "type": "path", "url": "./packages/*", "options": { "symlink": true } }
    ],
    "require": {
        "php": ">=8.5",
        "ifcastle/amphp-pool": "*",
        "ifcastle/application": "*",
        "ifcastle/async-contracts": "*",
        "ifcastle/configurator-toml": "*",
        "ifcastle/configurator-ini": "*",
        "ifcastle/console": "*",
        "ifcastle/design-patterns": "*",
        "ifcastle/di": "*",
        "ifcastle/events": "*",
        "ifcastle/amphp-engine": "*",
        "ifcastle/amphp-logger": "*",
        "ifcastle/amphp-web-server": "*",
        "ifcastle/codestyle": "*",
        "ifcastle/monolog": "*",
        "ifcastle/package-installer": "*",
        "ifcastle/swoole-engine": "*",
        "ifcastle/os-utilities": "*",
        "ifcastle/open-telemetry": "*",
        "ifcastle/protocol-contracts": "*",
        "ifcastle/rest-api": "*",
        "ifcastle/service-manager": "*",
        "ifcastle/type-definitions": "*",
        "ifcastle/user-manager": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.3"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "rector": "rector process --dry-run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "*": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
